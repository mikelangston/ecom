<div class="col-md-6 col-md-offset-3">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-new-pass" }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden, label: false, placeholder: "Reset Password Token", input_html: { class: "form-control" } %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, label: false, required: true, autofocus: true, placeholder: "New Password", input_html: { class: "form-control" } %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: "New Password Confirmation", input_html: { class: "form-control" } %>
    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
</div>