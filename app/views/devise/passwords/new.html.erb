<div class="col-md-6 col-md-offset-3">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-lost-pass" }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: { class: "form-control" } %>
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
</div>